    method void createLevel(int num, int w, int h, int left, int up, String c, String r, String sol){ // заполнение рядов и строк реализовано через сложный контруктор расширения
        var ArrayExtension arrExt;
        let number = num;
        let width = w;
        let height = h;
        let leftPanel = left;
        let UpPanel = up;

        let arrExt = ArrayExtension.newBigIntArray(c);
        let columns = arrExt.array();

        let arrExt = ArrayExtension.newBigIntArray(r);
        let rows = arrExt.array();

        let solution = Array.new(width * height); 
        let arrExt = ArrayExtension.newBooleanArray(sol);
        let expectedSolution = arrExt.array();

        do c.dispose();
        do r.dispose();
        do sol.dispose();
        return;
    }

    method boolean isSolutionCorrect(){
        var int i;
		let i = height * width - 1;
		while (i > -1){
			if (~(solution[i] = expectedSolution[i])){
				return false;
			}
			let i = i - 1;
		}
		return true;
    }


    method int number(){
        return number;
    }

    method int width(){
        return width;
    }

    method int height(){
        return height;
    }

    method int leftPanel(){
        return leftPanel;
    }

    method int UpPanel(){
        return UpPanel;
    }

    method Array rows(){
        return rows;
    }

    method Array columns(){
        return columns;
    }

    method Array solution(){
        return solution;
    }

    method Array expectedSolution(){
        return expectedSolution;
    }

    method void dispose(){
        do rows.dispose();
        do columns.dispose();
        do solution.dispose();
        return;
    }
}

